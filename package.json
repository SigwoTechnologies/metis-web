    "nprogress": "^0.2.0",
    "openpgp": "^5.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-files": "^3.0.0-alpha.3",
    "react-hook-form": "^7.33.1",
    "react-redux": "^8.0.2",
    "react-router-dom": "6",
