    "@types/node": "^16.11.41",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^18.0.14",
    "@types/react-dom": "^18.0.5",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.30.0",
